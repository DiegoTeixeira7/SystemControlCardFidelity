<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pointsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="Clientes:" />

    <Spinner
        android:id="@+id/spinnerClientes"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/pointsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/texto_combo" />

    <TextView
        android:id="@+id/cpfText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerClientes"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="CPF: 123.456.789-10" />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/cpfText"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnGenerateCodes"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/price"
        android:layout_height="wrap_content"
        android:text="Gerar códigos de Resgate"
        android:onClick="codes"
        android:tag="generateCodes"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/codeAlphaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGenerateCodes"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="Código alfanumérico:" />

    <TextView
        android:id="@+id/codeAlpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeAlphaText"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="1312412412412414141212412414" />

    <TextView
        android:id="@+id/codeQRCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeAlpha"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="QR Code:" />


    <ImageView
        android:id="@+id/imageQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeQRCodeText"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/btnValidadeQRCoe"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/imageQRCode"
        android:layout_height="wrap_content"
        android:text="Enviar códigos"
        android:onClick="codes"
        android:tag="sendCodes"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="212dp" />

</RelativeLayout>