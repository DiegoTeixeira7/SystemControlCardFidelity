<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueTheme">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            app:srcCompat="@drawable/android" />

        <Button
            android:id="@+id/btnclient"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:background="@drawable/button_white_big"
            android:theme="@style/Button"
            android:elevation="100dp"
            android:fontFamily="@font/corbel"
            android:textColor="#666666"
            android:minHeight="100dp"
            android:layout_marginTop="50dp"
            android:textSize="32dp"
            android:text="Cliente" />

        <Button
            android:id="@+id/btnCompany"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:background="@drawable/button_yellow_big"
            android:theme="@style/Button"
            android:elevation="100dp"
            android:fontFamily="@font/corbel"
            android:textColor="#666666"
            android:minHeight="100dp"
            android:layout_marginTop="50dp"
            android:textSize="32dp"
            android:text="Empresa" />
    </LinearLayout>

</RelativeLayout>