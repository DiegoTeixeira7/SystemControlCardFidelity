<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueTheme">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FEE94E"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sistema de Controle de CartÃ£o de Fidelidade"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/toolbar_title"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_marginTop="85dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            app:srcCompat="@drawable/android" />

        <Button
            android:id="@+id/btnclient"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:background="@drawable/button_white_big"
            android:theme="@style/Button"
            android:elevation="100dp"
            android:fontFamily="@font/corbel"
            android:textColor="#666666"
            android:minHeight="100dp"
            android:layout_marginTop="50dp"
            android:textSize="32dp"
            android:text="Cliente"
            android:tag="cliente"
            android:onClick="choiceActivity"/>

        <Button
            android:id="@+id/btnCompany"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:background="@drawable/button_yellow_big"
            android:theme="@style/Button"
            android:elevation="100dp"
            android:fontFamily="@font/corbel"
            android:textColor="#666666"
            android:minHeight="100dp"
            android:layout_marginTop="50dp"
            android:textSize="32dp"
            android:text="Empresa"
            android:tag="empresa"
            android:onClick="choiceActivity"/>
    </LinearLayout>

</RelativeLayout>