<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="AppTheme.Toolbar.Title" parent="Theme.AppCompat.NoActionBar">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/corbel_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ems">10</item>

    </style>

    <style name="Button" parent="android:Widget.Button">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/corbel_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="elevation">10dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">10dp</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">#666666</item>

    </style>

    <style name="Description" parent="android:Widget.TextView">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/corbel_bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Title" parent="android:Widget.TextView">
        <item name="color">#fff</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/corbel</item>
        <item name="android:textColor">#fff</item>
        <item name="elevation">10dp</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="subTitle" parent="android:Widget.TextView">
        <item name="color">#fff</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/corbel</item>
        <item name="android:textColor">#fff</item>
        <item name="elevation">10dp</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">#000</item>
    </style>

    <style name="subTitleNormal" parent="android:Widget.TextView">
        <item name="color">#fff</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#fff</item>
        <item name="elevation">10dp</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">#000</item>
    </style>

</resources>