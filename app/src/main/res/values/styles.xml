<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/corbel_bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ems">10</item>
    </style>

    <style name="Button" parent="android:Widget.Button">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/corbel_bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowColor">#000</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="Description" parent="android:Widget.TextView">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/corbel_bold</item>
        <item name="android:textSize">10dp</item>
    </style>

</resources>